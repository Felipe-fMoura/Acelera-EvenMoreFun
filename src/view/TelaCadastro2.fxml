<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Group?>

<StackPane fx:id="telaCadastro2"  stylesheets="@../resources/styles.css" 
           xmlns="http://javafx.com/javafx/23.0.1" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="view.TelaCadastro2Controller">

     <!-- oque centraliza o anchorpane é o Stackpane.all -->  
         <children>
         
            <ImageView fx:id="backgroundImage" preserveRatio="false">
               <image>
                  <Image url="@../resources/TelaCadastro2.png" />
               </image>
            </ImageView>
            
            <Group fx:id="grupoCampos">
            
            <AnchorPane fx:id="contentPane" prefWidth="1920" prefHeight="1080">
            
            <children>
            
            <TextField fx:id="txtNome" layoutX="435.0" layoutY="342.0" 
                       prefHeight="60.0"  prefWidth="221.0" 
                       promptText="Nome" 
                       styleClass="logincadastro2-txtfield">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
            
            </TextField>
            
            <Button fx:id="btnConfirma" layoutX="559.0" layoutY="809.0" 
                    mnemonicParsing="false" onAction="#finalizarCadastro" 
                    opacity="0.0" prefHeight="66.0" prefWidth="176.0" 
                    styleClass="logincadastro2-btn" 
                    textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
               
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            
            <TextField fx:id="txtSobrenome" layoutX="698.0" layoutY="342.0" 
                       prefHeight="60.0" prefWidth="221.0" 
                       promptText="Sobrenome" 
                       styleClass="logincadastro2-txtfield">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
               
            </TextField>
            
            <TextField fx:id="txtTelefone" layoutX="435.0" layoutY="518.0" 
                       prefHeight="60.0" prefWidth="484.0" 
                       promptText="Telefone" 
                       styleClass="logincadastro2-txtfield">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
               
            </TextField>
            
            <TextField fx:id="txtCPF" layoutX="435.0" layoutY="431.0" 
                       prefHeight="60.0" prefWidth="484.0" 
                       promptText="CPF" 
                       styleClass="logincadastro2-txtfield">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
               
            </TextField>
            
            <DatePicker fx:id="dataNasc" layoutX="435.0" layoutY="695.0" 
                        prefHeight="60.0" prefWidth="518.0" 
                        promptText="Data de Nascimento" />
                        
            <ComboBox fx:id="comboBoxGenero" layoutX="435.0" layoutY="608.0" prefHeight="60.0" prefWidth="484.0" promptText="Gênero" styleClass="logincadastro2-txtfield" />
         </children>
         
      </AnchorPane>
      
      </Group>
      
   </children>
   
</StackPane>
