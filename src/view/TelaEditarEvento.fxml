<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="
    -fx-padding: 25;
    -fx-background-color: #f9f9fb;
    -fx-alignment: top_center;
    -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TelaEditarEventoController">

    <Label text="Editar Evento" style="
        -fx-font-size: 24;
        -fx-font-weight: bold;
        -fx-text-fill: #3b2e5a;
    "/>

    <GridPane hgap="15" vgap="12" style="
        -fx-background-color: white;
        -fx-padding: 20;
        -fx-border-radius: 10;
        -fx-background-radius: 10;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);
    ">
        <columnConstraints>
            <ColumnConstraints percentWidth="30" />
            <ColumnConstraints percentWidth="70" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="90" /> <!-- descrição -->
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
        </rowConstraints>

        <!-- Campos -->

        <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" style="
            -fx-background-radius: 6;
            -fx-border-radius: 6;
            -fx-border-color: #c4b8d9;
            -fx-padding: 6 10;
            -fx-prompt-text-fill: #bbb;
        " />

        <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <TextArea fx:id="txtDescricao" GridPane.columnIndex="1" GridPane.rowIndex="1" style="
            -fx-background-radius: 6;
            -fx-border-radius: 6;
            -fx-border-color: #c4b8d9;
            -fx-padding: 6 10;
            -fx-prompt-text-fill: #bbb;
            -fx-font-size: 13;
        " prefRowCount="5" />

        <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <DatePicker fx:id="dateData" style="
                -fx-background-radius: 6;
                -fx-border-radius: 6;
                -fx-border-color: #c4b8d9;
                -fx-padding: 4 8;
            " />
            <TextField fx:id="txtHora" promptText="HH:mm" style="
                -fx-pref-width: 80;
                -fx-background-radius: 6;
                -fx-border-radius: 6;
                -fx-border-color: #c4b8d9;
                -fx-padding: 6 10;
                -fx-prompt-text-fill: #bbb;
            " />
        </HBox>

        <Label text="Local:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <TextField fx:id="txtLocal" GridPane.columnIndex="1" GridPane.rowIndex="3" style="
            -fx-background-radius: 6;
            -fx-border-radius: 6;
            -fx-border-color: #c4b8d9;
            -fx-padding: 6 10;
            -fx-prompt-text-fill: #bbb;
        " />

        <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <ComboBox fx:id="cbCategoria" GridPane.columnIndex="1" GridPane.rowIndex="4" style="
            -fx-background-radius: 6;
            -fx-border-radius: 6;
            -fx-border-color: #c4b8d9;
            -fx-padding: 6 10;
        " />

        <Label text="Palestrante:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <TextField fx:id="txtPalestrante" GridPane.columnIndex="1" GridPane.rowIndex="5" style="
            -fx-background-radius: 6;
            -fx-border-radius: 6;
            -fx-border-color: #c4b8d9;
            -fx-padding: 6 10;
            -fx-prompt-text-fill: #bbb;
        " />

        <Label text="Imagem:" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <TextField fx:id="txtImagem" editable="false" HBox.hgrow="ALWAYS" promptText="Selecione uma imagem..." style="
                -fx-background-radius: 6;
                -fx-border-radius: 6;
                -fx-border-color: #c4b8d9;
                -fx-padding: 6 10;
                -fx-prompt-text-fill: #bbb;
            " />
            <Button text="📁" onAction="#handleSelecionarImagem" style="
                -fx-background-color: #46295a;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-background-radius: 6;
                -fx-pref-width: 40;
                -fx-cursor: hand;
            " />
        </HBox>

        <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="7" style="-fx-text-fill: #4a3f6a; -fx-font-weight: 600;" />
        <ComboBox fx:id="cbTipo" GridPane.columnIndex="1" GridPane.rowIndex="7" style="
            -fx-background-radius: 6;
            -fx-border-radius: 6;
            -fx-border-color: #c4b8d9;
            -fx-padding: 6 10;
        " />

        <CheckBox fx:id="checkPrivado" text="Evento Privado" GridPane.columnIndex="1" GridPane.rowIndex="8" style="
            -fx-text-fill: #555555;
        " />
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button onAction="#handleEditarEvento" text="Salvar Alterações" style="
            -fx-background-color: #2ecc71;
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-font-size: 15;
            -fx-padding: 10 25;
            -fx-background-radius: 10;
            -fx-cursor: hand;
        " />
        <Button onAction="#handleExcluirEvento" text="Excluir Evento" style="
            -fx-background-color: #e74c3c;
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-font-size: 15;
            -fx-padding: 10 25;
            -fx-background-radius: 10;
            -fx-cursor: hand;
        " />
    </HBox>

</VBox>
