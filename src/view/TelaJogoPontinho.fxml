<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #0f0f0f, #1a1a1a);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TelaJogoPontinhoController">

    <Text fx:id="scoreText" fill="WHITE" layoutX="20.0" layoutY="30.0" styleClass="score-label" text="Pontos: 0">
        <font>
            <Font name="Orbitron" size="18.0" />
        </font>
    </Text>

    <Button fx:id="startBtn" layoutX="230.0" layoutY="180.0" onAction="#startGame" styleClass="start-button" text="Iniciar Jogo" />

</AnchorPane>
