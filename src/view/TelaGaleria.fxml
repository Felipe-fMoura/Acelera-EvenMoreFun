<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TelaGaleriaController"
            prefWidth="900.0" prefHeight="650.0"
            style="-fx-background-color: #f7f3fc;">

    <!-- Cabeçalho -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #8e44ad;">
            <Label text="Galeria de Fotos"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- Área de fotos -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
            <content>
                <TilePane fx:id="galeriaFotos"
                          hgap="15" vgap="15"
                          style="-fx-padding: 20;" />
            </content>
        </ScrollPane>
    </center>

    <!-- Rodapé com botão -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15; -fx-background-color: #dcd6f7;">
            <Button fx:id="btnUploadFoto"
                    text="Enviar Foto"
                    onAction="#handleUploadFoto"
                    style="
                        -fx-background-color: #9b59b6;
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-padding: 8 16;
                        -fx-background-radius: 10;
                    ">
                <HBox alignment="CENTER" spacing="5">
                    <Label text="📸" style="-fx-font-size: 16px;" />
                    <Label text="Enviar Foto" style="-fx-text-fill: white;" />
                </HBox>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
