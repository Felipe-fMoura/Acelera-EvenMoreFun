<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.PerfilUsuarioController"
            prefWidth="350" prefHeight="400">
    <VBox alignment="TOP_CENTER" spacing="12" layoutX="10" layoutY="10" prefWidth="330" style="-fx-padding: 20;">
        <Label fx:id="lblNomeUsuario" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <!-- Dados com emojis -->
        <Label fx:id="lblUsername" style="-fx-font-size: 14px;" />
        <Label fx:id="lblEmail" style="-fx-font-size: 14px;" />
        <Label fx:id="lblNascimento" style="-fx-font-size: 14px;" />
        <Label fx:id="lblCriado" style="-fx-font-size: 14px;" />

        <Label fx:id="lblTituloBadges" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
        <FlowPane fx:id="painelBadges" hgap="10" vgap="10" />
    </VBox>
</AnchorPane>
